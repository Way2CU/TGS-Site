<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../units/schema/language.dtd">
<document>
	<cms:var name="_DOCTYPE"/>
	<html lang="$language" cms:eval="lang">
		<head>
			<title><cms:text constant="site_title"/></title>
			<link href='https://fonts.googleapis.com/css?family=Signika:400,700' rel='stylesheet' type='text/css'/>
			<cms:script src="_BASEURL.'/site/scripts/tween.js'" cms:eval="src"/>
			<cms:module name="head_tag" action="print_tag"/>
		</head>

		<body class="$language_rtl ? 'rtl' : 'ltr'" cms:eval="class">
			<!-- Top section of the site -->
			<cms:template file="parts/header.xml"/>

			<div id="intro">
				<cms:module
					name="articles"
					action="show"
					text_id="home_page_intro"
					template="parts/article.xml"
					/>
			</div>

			<div id="video">
				<cms:module
					name="articles"
					action="show"
					text_id="our_mission"
					template="parts/article.xml"
					/>

				<cms:module
					name="youtube"
					action="show"
					text_id="tgs_video"
					template="parts/video.xml"
					/>
			</div>

			<div id="features">
				<ul>
					<cms:module
						name="articles"
						action="show_list"
						group="features"
						template="stock/features_generic.xml"
						>
						<param name="title" value=""/>
						<param name="sprite" value="site/images/site-sprite.svg"/>
					</cms:module>
				</ul>
			</div>

			<div id="locations">
				<cms:module
					name="articles"
					action="show"
					text_id="map"
					template="parts/article.xml"
					/>
				<!-- container for map-->
				<div class="map"></div>
			</div>

			<!-- Bottom section of the site -->
			<cms:template file="parts/footer.xml"/>
		</body>
	</html>
</document>
