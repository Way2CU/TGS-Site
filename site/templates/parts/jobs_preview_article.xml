<document>
	<article class="job_preview visible" data-id="$params['text_id']" cms:eval="data-id">
		<a 	
			href="url_Make('view', 'careers', array('id', $params['id']), array('job', str_replace(' ', '-', $params['title'][$language])))"
			cms:eval="href"
			>
			<h4>
				<cms:var param="title" multilanguage="yes"/>
			</h4>
		</a>
		<cms:markdown param="content" multilanguage="yes"/>
		<a
			class="preview"
			href="url_Make('view', 'careers', array('id', $params['id']), array('job', str_replace(' ', '-', $params['title'][$language])))"
			cms:eval="href"
			>
			<cms:text constant="button_read_more"/>
		</a>
	</article>
</document>